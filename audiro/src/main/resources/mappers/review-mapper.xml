<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.audiro.repository.PostDao">

	<!-- 내 여행 후기 1개 삭제 -->
	<delete id="deleteReview">
		delete from post where post_id = #{postId}
	</delete>
	
	<!-- 내 여행 후기 게시글 삭제전 해당 게시글 -->
	
	<!-- 내 여행후기 전체 불러오기 테스트!!!-->
	<select id="readMyReview" resultType="Post">
		select users_id, title, good, travel_plan_id
		from post
		where users_id = #{usersId}
	</select>
	
	<!-- 나를 찜한 유저 수 -->
	<select id="countMylike" resultType="int">
		select count(*) 
		from favorite_users fu
		where fu.interested_user_id = #{usersId}	
	</select>
	
	<!-- 여행후기 good  갯수 -->
	<select id="countReviewGood" resultType="int">
		select count(*)
		from post
		where post_type)id = #{postTypeId}	
	</select>
	
	

</mapper>