<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.audiro.repository.ReviewDao">

	<!--  여행 후기 1개 상세 내용불러오기 -->
	<select id="readDetailsReviewById" resultType="Post">
		select * from post 
		where post_id = 10
	</select>
	
	<!-- 해당 여행후기 좋아요갯수 -->
	<select id="goodCountByPostId" resultType="Post">
		select good
		from post
		where post_id = 10;
	</select>
	
	<!-- 내 여행후기이면 삭제  post_userid = 현재 로그인 users_id-->

	<!-- 해당 여행일기 유저 관심유저담기 insert-->
	<insert id ="addLikeUser">
		insert into favorite_users (user_id)
		values (#{user_id});
	</insert>
	
	<!-- 해당 여행일기 찜하기 insert -->
	<insert id ="addLikeReview">
		insert into favorite_post (user_id)
		values (#{user_id});
	</insert>
	

</mapper>

